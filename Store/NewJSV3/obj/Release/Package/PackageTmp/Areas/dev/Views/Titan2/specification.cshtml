                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "detail")</td> <td>  <input id='TPL_detail' data-options="required:true,multiline:true" name='detail' type='text' class='easyui-textbox' style='width:300px;height:100px;' /></td></tr>

